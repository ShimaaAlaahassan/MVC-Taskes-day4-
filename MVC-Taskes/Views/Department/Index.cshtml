@{
    int i = 1;
}
@Html.ActionLink("Add department","Add","Department")
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>location</th>
            <th>deptManger</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.Name</td>
                <td>
                    @foreach (var deptm in item.DepartmentLocations)
                    {
                        @deptm.Location
                        
                    }</td>
                <td>@item.employeeManege</td>

                <td>@Html.ActionLink("Details","Details","Department",new {Id = item.Number})</td>
                <td>@Html.ActionLink("Edit","Edit","Department",new {Id = item.Number})</td>
                <td>@Html.ActionLink("Delete","Delete","Department",new {Id = item.Number})</td>
            </tr>
        }
    </tbody>
</table>
